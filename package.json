{
  "name": "base-graphql-prisma-postgres",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "generate": "yarn prisma:generate && graphql-codegen --config codegen.yml && copyfiles -u 1 src/**/*.graphql dist",
    "start": "node dist/index.js",
    "dev": "NODE_ENV=local ts-node-dev --respawn src/index.ts",
    "prisma:generate": "yarn prisma generate",
    "tsc": "tsc",
    "test": "jest --verbose --coverage",
    "test-ci": "yarn prisma:generate && yarn tsc && yarn test",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "build": "yarn tsc && cp -r src/assets dist"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.16.1",
    "@graphql-codegen/schema-ast": "^2.6.0",
    "@graphql-codegen/typescript": "^2.8.5",
    "@graphql-codegen/typescript-resolvers": "^2.7.10",
    "@types/jest": "^29.2.4",
    "@types/lodash": "^4.14.191",
    "@types/node": "^18.11.17",
    "@types/pino-multi-stream": "^5.1.3",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.30.0",
    "jest": "^29.3.1",
    "pino-pretty": "^9.1.1",
    "prettier": "^2.8.1",
    "ts-jest": "^29.0.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@graphql-tools/graphql-file-loader": "^7.5.13",
    "@graphql-tools/load": "^7.8.8",
    "@graphql-tools/schema": "^9.0.12",
    "@prisma/client": "^4.8.0",
    "apollo-server-express": "^3.11.1",
    "axios": "^1.2.1",
    "cors": "^2.8.5",
    "date-fns": "^2.29.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "graphql": "^16.6.0",
    "graphql-iso-date": "^3.6.1",
    "graphql-tag": "^2.12.6",
    "graphql-type-json": "^0.3.2",
    "helmet": "^6.0.1",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.21",
    "pino": "^8.8.0",
    "pino-multi-stream": "^6.0.0",
    "pino-tee": "^0.3.0",
    "prisma": "^4.8.0",
    "redis": "^4.5.1",
    "reflect-metadata": "^0.1.13"
  }
}
